// tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "linux": {
                "env": {
                    "DOTNET_USE_POLLING_FILE_WATCHER": "true"
                }
            },
            "args": [
                "watch","run",
                "${workspaceFolder}/${workspaceFolder}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
    "problemMatcher": "$msCompile"
    }
    ]
}